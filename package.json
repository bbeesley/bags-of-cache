{
  "name": "@beesley/bags-of-cache",
  "version": "1.0.24",
  "description": "TTL based in memory cacheing util",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./config": {
      "types": "./dist/types/config-client.d.ts",
      "import": "./dist/esm/config-client.js",
      "require": "./dist/cjs/config-client.cjs"
    },
    "./dynamo": {
      "types": "./dist/types/dynamo-client.d.ts",
      "import": "./dist/esm/dynamo-client.js",
      "require": "./dist/cjs/dynamo-client.cjs"
    }
  },
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.cjs",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "src/**/*.ts",
    "src/*.ts"
  ],
  "engines": {
    "node": ">=16.13"
  },
  "directories": {
    "doc": "./docs"
  },
  "scripts": {
    "readme:typedoc": "typedoc --plugin typedoc-plugin-markdown",
    "readme:client": "npx --yes documentation readme --markdown-toc false --section 'Client API' --shallow --github src/cacheing-client.ts",
    "readme:dynamo": "npx --yes documentation readme --markdown-toc false --section 'Dynamo API' --shallow --github src/dynamo-client.ts",
    "documentation": "run-s readme:*",
    "compile:esm": "tsc",
    "lint": "xo && tsc --noEmit -p tsconfig-lint.json",
    "pretest": "npm run lint",
    "compile:cjs": "babel src --out-dir dist/cjs --extensions '.ts,.cjs,.mjs' --ignore '**/*.test.ts' --source-maps --out-file-extension '.cjs'",
    "compile": "run-p compile:*",
    "test:unit": "TSIMP_DIAG=ignore ava 'src/*.unit.test*'",
    "test:int": "TSIMP_DIAG=ignore ava 'src/*.int.test*'",
    "test": "npm run test:unit",
    "prerelease": "npm run documentation",
    "release": "npx semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbeesley/bags-of-cache.git"
  },
  "author": "Bill Beesley <bill@beesley.dev>",
  "license": "MIT",
  "eslintConfig": {
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./tsconfig-lint.json"
      ]
    }
  },
  "xo": {
    "space": true,
    "prettier": true,
    "rules": {
      "func-names": [
        "error",
        "always"
      ],
      "no-await-in-loop": "off",
      "@typescript-eslint/no-implicit-any-catch": "off",
      "unicorn/no-array-reduce": "off",
      "import/extensions": "off",
      "n/prefer-global/process": "off",
      "n/file-extension-in-import": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/no-process-exit": "off"
    },
    "overrides": [
      {
        "files": "**/*.ts",
        "rules": {
          "@typescript-eslint/naming-convention": [
            "error",
            {
              "selector": "default",
              "format": [
                "camelCase"
              ]
            },
            {
              "selector": "variable",
              "format": [
                "camelCase",
                "UPPER_CASE",
                "PascalCase"
              ]
            },
            {
              "selector": "import",
              "format": [
                "camelCase",
                "PascalCase"
              ]
            },
            {
              "selector": "parameter",
              "format": [
                "camelCase",
                "PascalCase"
              ]
            },
            {
              "selector": "typeLike",
              "format": [
                "PascalCase"
              ]
            },
            {
              "selector": "classProperty",
              "format": [
                "camelCase"
              ]
            },
            {
              "selector": "objectLiteralProperty",
              "format": null
            },
            {
              "selector": "typeProperty",
              "format": null
            },
            {
              "selector": "enum",
              "format": [
                "PascalCase",
                "UPPER_CASE"
              ]
            },
            {
              "selector": "enumMember",
              "format": null
            }
          ]
        }
      },
      {
        "files": "**/*.test.ts",
        "rules": {
          "import/no-extraneous-dependencies": "off",
          "@typescript-eslint/naming-convention": "off",
          "eslint-comments/no-unused-disable": "off"
        }
      }
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@beesley/tsconfig": "^3.0.0",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@smithy/types": "^4.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsdom": "^21.1.7",
    "@types/sinon": "^17.0.3",
    "@types/yargs": "^17.0.33",
    "ava": "^6.2.0",
    "aws-sdk-client-mock": "^4.1.0",
    "babel-plugin-replace-import-extension": "^1.1.4",
    "delay": "^6.0.0",
    "documentation": "^14.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "sinon": "^21.0.0",
    "tsimp": "^2.0.12",
    "typedoc": "^0.28.0",
    "typedoc-plugin-markdown": "^4.4.1",
    "typescript": "^5.7.3",
    "xo": "^1.2.2"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/**",
            "package.json",
            "CHANGELOG.md",
            "README.md"
          ],
          "message": "chore(release): ${nextRelease.version} ðŸš€ [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.726.1",
    "@aws-sdk/lib-dynamodb": "^3.726.1",
    "@aws-sdk/util-dynamodb": "^3.726.1",
    "@isaacs/ttlcache": "^1.4.1",
    "p-limit": "^7.0.0"
  },
  "ava": {
    "files": [
      "src/*.test.ts",
      "src/*.test.js"
    ],
    "failFast": true,
    "failWithoutAssertions": false,
    "verbose": true,
    "extensions": {
      "ts": "module",
      "js": true
    },
    "nodeArguments": [
      "--import=tsimp"
    ],
    "timeout": "5m",
    "snapshotDir": "__snapshots__"
  }
}
